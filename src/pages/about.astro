---
import PageLayout from "@/layouts/Base.astro";
import SocialList from "@/components/SocialList.astro";
import InfoSection from "@/components/custom/InfoSection.astro";
import PageHeader from "@/components/custom/PageHeader.astro";
import { customConfig } from "@/custom.config";

const meta = {
	title: "About",
	description: "Data Is Dead, Long Live Value.",
};

const { experience, education, pageHeaders } = customConfig;
const aboutHeader = pageHeaders.about!;
---

<PageLayout meta={meta}>
	<div class="space-y-8">
		<PageHeader
			title={aboutHeader.title}
			subtitle={aboutHeader.subtitle}
			description={aboutHeader.description}
			showSocialLinks={aboutHeader.showSocialLinks}
		/>

		<InfoSection title="Current Role & Experience" items={experience} />
		<InfoSection title="Education" items={education} />

		<!-- Connect Section -->
		<section class="space-y-4">
			<h2 class="text-xl font-bold">Let's Connect</h2>
			<p class="text-gray-600 dark:text-gray-300">
				I'm always open to meaningful conversations and knowledge sharing. Feel free to reach out!
			</p>
			<SocialList />
		</section>
	</div>
</PageLayout>
